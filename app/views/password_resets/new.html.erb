<% provide(:title, t('password_resets.reset_password')) %>

<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h4 class="card-title mb-0"><%= t('password_resets.reset_password') %></h4>
      </div>
      <div class="card-body">
        <% flash.each do |type, message| %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= message %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        <% end %>

        <%= form_with(url: password_resets_path, scope: :password_reset, local: true, class: "form") do |f| %>
          <div class="mb-3">
            <%= f.label :email, t('password_resets.email'), class: "form-label" %>
            <%= f.email_field :email,
                required: true,
                placeholder: "example@domain.com",
                class: "form-control" %>
          </div>

          <div class="d-grid">
            <%= f.submit t('password_resets.send_password_reset_email'), class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
