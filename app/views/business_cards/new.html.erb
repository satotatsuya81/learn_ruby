<%# 名刺新規作成ページ %>
<% content_for :title, "名刺新規作成" %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1 class="h3 mb-4">名刺新規作成</h1>

      <%# エラーメッセージ表示 %>
      <% if @business_card.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <h4 class="alert-heading">入力エラーが発生しました:</h4>
          <ul class="mb-0">
            <% @business_card.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%# 名刺作成フォーム %>
      <%= render 'form', business_card: @business_card %>

      <%# 戻るリンク %>
      <div class="mt-3">
        <%= link_to "名刺一覧に戻る", business_cards_path, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
</div>