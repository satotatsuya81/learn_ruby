<%# 名刺新規作成ページ %>
<% content_for :title, "名刺新規作成" %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1 class="h3 mb-4">名刺新規作成</h1>

      <!-- React BusinessCardForm コンポーネント -->
      <div data-controller="business-card-form"
           data-business-card-form-mode-value="create"
           data-business-card-form-errors-value="<%= @business_card.errors.full_messages.to_json %>">

        <!-- Loading表示（Reactがマウントされるまでの間） -->
        <div class="text-center">
          <div class="spinner-border" role="status">
            <span class="visually-hidden">読み込み中...</span>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
