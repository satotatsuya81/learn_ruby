<% content_for :title, t('business_cards.index.title') %>

<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= t('business_cards.index.title') %></h1>
    <%= link_to t('business_cards.show.new'), new_business_card_path, class: "btn btn-primary" %>
  </div>

  <!-- 成功メッセージ -->
  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <!-- React BusinessCardList コンポーネント -->
  <div id="business-card-list-root"
       data-business-cards='<%= @business_cards.to_json %>'>
  </div>
</div>
