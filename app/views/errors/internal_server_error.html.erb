<div class="error-page">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 text-center">
        <div class="display-1 text-danger mb-4">500</div>
        <h2 class="mb-3"><%= t('errors.internal_server_error.title') %></h2>
        <p class="mb-4 text-muted"><%= t('errors.internal_server_error.message') %></p>

        <div class="d-grid gap-2 d-md-block">
          <%= link_to t('common.buttons.home'), root_path, class: "btn btn-primary me-2" %>
          <%= link_to t('common.buttons.reload'), 'javascript:location.reload()', class: "btn btn-outline-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>