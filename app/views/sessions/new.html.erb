<% content_for :title, t('authentication.login.title') %>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h3 class="text-center"><%= t('authentication.login.title') %></h3>
        </div>
        <div class="card-body">
          <% flash.each do |type, message| %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <%= message %>
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
          <% end %>

          <%= form_with scope: :session, url: login_path, local: true, class: "needs-validation", novalidate: true do |form| %>
            <div class="mb-3">
              <%= form.label :email, t('authentication.login.email_label'), class: "form-label" %>
              <%= form.email_field :email, class: "form-control", required: true %>
            </div>

            <div class="mb-3">
              <%= form.label :password, t('authentication.login.password_label'), class: "form-label" %>
              <%= form.password_field :password, class: "form-control", required: true %>
            </div>

            <div class="mb-3 form-check">
              <%= form.check_box :remember_me, class: "form-check-input" %>
              <%= form.label :remember_me, t('authentication.login.remember_me_label'), class: "form-check-label" %>
            </div>

            <div class="d-grid">
              <%= form.submit t('authentication.login.submit_button'), class: "btn btn-primary" %>
            </div>
          <% end %>

          <div class="text-center mt-3">
            <%= link_to t('password_resets.forgot_password'), new_password_reset_path, class: "text-decoration-none" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
