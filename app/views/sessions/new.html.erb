<% content_for :title, t('authentication.login.title') %>

<!-- React LoginForm コンポーネント -->
<div data-controller="login-form"
     data-login-form-login-path-value="<%= login_path %>"
     data-login-form-new-password-reset-path-value="<%= new_password_reset_path %>">

  <!-- Loading表示（Reactがマウントされるまでの間） -->
  <div class="text-center">
    <div class="spinner-border" role="status">
      <span class="visually-hidden">読み込み中...</span>
    </div>
    <p class="mt-2">ログインフォーム読み込み中...</p>
  </div>
</div>
