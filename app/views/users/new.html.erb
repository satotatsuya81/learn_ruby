<% provide(:title, t('users.sign_up')) %>

<!-- React UserRegistrationForm コンポーネント -->
<div data-controller="user-registration-form"
     data-user-registration-form-signup-path-value="<%= users_path %>"
     data-user-registration-form-login-path-value="<%= login_path %>"
     <% if @user&.errors&.any? %>
     data-user-registration-form-errors-value="<%= @user.errors.full_messages.to_json %>"
     data-user-registration-form-user-data-value="<%= { name: @user.name, email: @user.email }.to_json %>"
     <% end %>>

  <!-- Loading表示（Reactがマウントされるまでの間） -->
  <div class="text-center">
    <div class="spinner-border" role="status">
      <span class="visually-hidden">読み込み中...</span>
    </div>
    <p class="mt-2">ユーザー登録フォーム読み込み中...</p>
  </div>
</div>
