{
  "name": "business-card-manager",
  "version": "1.0.0",
  "private": true,
  "description": "Business Card Manager - Rails application with TypeScript support",
  "scripts": {
    "build": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "build:css": "cp app/assets/stylesheets/application.css app/assets/builds/application.css",
    "watch": "webpack --mode=development --watch",
    "test": "jest",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint app/javascript/**/*.ts --max-warnings 0",
    "lint:fix": "eslint app/javascript/**/*.ts --fix",
    "setup-security": "safe-chain setup",
    "dev": "foreman start -f Procfile.dev",
    "test:all": "npm-run-all test:ci type-check lint",
    "build:all": "npm-run-all build build:css"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.1",
    "@hotwired/turbo-rails": "^7.3.0",
    "@popperjs/core": "^2.11.8",
    "@reduxjs/toolkit": "^1.9.7",
    "bootstrap": "^5.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-redux": "^8.1.3",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@aikidosec/safe-chain": "^1.0.23",
    "@babel/core": "^7.23.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/plugin-transform-class-properties": "^7.27.1",
    "@babel/plugin-transform-object-rest-spread": "^7.28.4",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.23.0",
    "@babel/preset-typescript": "^7.23.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@types/react-redux": "^7.1.34",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "babel-loader": "^9.1.0",
    "css-loader": "^6.8.0",
    "eslint": "^8.0.0",
    "fork-ts-checker-webpack-plugin": "^9.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.69.0",
    "sass-loader": "^13.3.0",
    "style-loader": "^3.3.0",
    "ts-jest": "^29.4.3",
    "ts-loader": "^9.5.0",
    "tsconfig-paths": "^4.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^6.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
