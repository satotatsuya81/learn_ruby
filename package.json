{
  "name": "business-card-manager",
  "version": "1.0.0",
  "private": true,
  "description": "Business Card Manager - Rails application with TypeScript support",
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --outdir=app/assets/builds --public-path=assets",
    "build:css": "sass ./app/assets/stylesheets/application.bootstrap.scss:./app/assets/builds/application.css --no-source-map --load-path=node_modules",
    "watch": "esbuild app/javascript/*.* --bundle --sourcemap --outdir=app/assets/builds --public-path=assets --watch",
    "watch:css": "sass ./app/assets/stylesheets/application.bootstrap.scss:./app/assets/builds/application.css --no-source-map --load-path=node_modules --watch",
    "test": "jest",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint app/javascript/**/*.ts --max-warnings 0",
    "lint:fix": "eslint app/javascript/**/*.ts --fix",
    "setup-security": "safe-chain setup",
    "dev": "npm-run-all --parallel watch watch:css",
    "test:all": "npm-run-all test:ci type-check lint",
    "build:all": "npm-run-all build build:css"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.1",
    "@hotwired/turbo-rails": "^7.3.0",
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.2",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@aikidosec/safe-chain": "^1.0.23",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "esbuild": "^0.25.10",
    "eslint": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.69.0",
    "ts-jest": "^29.4.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
