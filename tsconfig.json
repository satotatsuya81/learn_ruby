{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./app/javascript/types",
      "./node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/javascript/*"],
      "@/types/User": ["./app/javascript/types/User.ts"],
      "@/types/*": ["./app/javascript/types/*"],
      "@/utils/*": ["./app/javascript/utils/*"],
      "@/controllers/*": ["./app/javascript/controllers/*"]
    }
  },
  "include": [
    "app/javascript/**/*",
    "spec/javascript/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tmp",
    "app/assets/builds",
    "node_modules/@types/node"
  ]
}
